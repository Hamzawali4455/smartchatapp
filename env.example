# SmartChat Environment Configuration
# Copy this file to .env and update the values with your actual credentials

# ===========================================
# APPLICATION CONFIGURATION
# ===========================================
APP_NAME=SmartChat
APP_VERSION=1.0.0
NODE_ENV=development
PORT=3000
WS_PORT=3001

# ===========================================
# API CONFIGURATION
# ===========================================
API_BASE_URL=https://api.smartchat.app
WS_URL=wss://ws.smartchat.app
API_TIMEOUT=30000
CORS_ORIGIN=http://localhost:3000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/smartchat_db
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=smartchat_user
DB_PASSWORD=your_secure_password
DB_NAME=smartchat_db
DB_SSL=false

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ===========================================
# AUTHENTICATION & SECURITY
# ===========================================
# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_secure
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_key_here
REFRESH_TOKEN_EXPIRES_IN=7d

# Password Hashing
BCRYPT_ROUNDS=12

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_ALGORITHM=AES-256-GCM
KEY_SIZE=256
IV_SIZE=12

# Security Settings
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=86400
BIOMETRIC_TIMEOUT=300
PASSWORD_MIN_LENGTH=8

# ===========================================
# FILE STORAGE & MEDIA
# ===========================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=smartchat-media
AWS_S3_ENDPOINT=https://s3.amazonaws.com

# File Upload Limits
MAX_IMAGE_SIZE=10485760
MAX_VIDEO_SIZE=104857600
MAX_DOCUMENT_SIZE=52428800
MAX_AUDIO_DURATION=300

# Media Processing
ENABLE_IMAGE_COMPRESSION=true
ENABLE_VIDEO_TRANSCODING=true
THUMBNAIL_SIZE=300

# ===========================================
# WEBSOCKET CONFIGURATION
# ===========================================
WS_CORS_ORIGIN=http://localhost:3000
WS_HEARTBEAT_INTERVAL=25000
WS_HEARTBEAT_TIMEOUT=60000
WS_MAX_CONNECTIONS=1000

# ===========================================
# AI & MACHINE LEARNING
# ===========================================
# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Speech Services
SPEECH_TO_TEXT_API_KEY=your_speech_to_text_api_key
TEXT_TO_SPEECH_API_KEY=your_text_to_speech_api_key
SPEECH_LANGUAGE=en-US

# AI Processing
AI_PROCESSING_TIMEOUT=5000
ENABLE_AI_FEATURES=true
ENABLE_VOICE_FEATURES=true

# ===========================================
# PUSH NOTIFICATIONS
# ===========================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key
FCM_PROJECT_ID=your_firebase_project_id

# Apple Push Notifications
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apns_team_id
APNS_BUNDLE_ID=com.smartchat.app
APNS_KEY_PATH=./certs/AuthKey.p8

# ===========================================
# EMAIL CONFIGURATION
# ===========================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Email Templates
EMAIL_FROM=noreply@smartchat.app
EMAIL_FROM_NAME=SmartChat

# ===========================================
# SMS CONFIGURATION
# ===========================================
# Twilio Configuration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# SOCIAL LOGIN
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Apple OAuth
APPLE_CLIENT_ID=your_apple_client_id
APPLE_TEAM_ID=your_apple_team_id
APPLE_KEY_ID=your_apple_key_id
APPLE_PRIVATE_KEY_PATH=./certs/AuthKey.p8

# ===========================================
# MONITORING & ANALYTICS
# ===========================================
# Sentry Error Tracking
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# Analytics
GOOGLE_ANALYTICS_ID=your_ga_tracking_id
MIXPANEL_TOKEN=your_mixpanel_token

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# ===========================================
# CACHING
# ===========================================
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000
CACHE_CHECK_PERIOD=600

# ===========================================
# STREAK CONFIGURATION
# ===========================================
STREAK_TIMEOUT_MINUTES=3
MAX_STREAK_LENGTH=3600
STREAK_REWARD_THRESHOLD=7
ENABLE_STREAK_FEATURES=true

# ===========================================
# CONNECTION SUITE
# ===========================================
ENABLE_CONNECTION_SUITE=true
BREATHING_SESSION_TIMEOUT=300
MUSIC_SESSION_TIMEOUT=1800
SHARED_ROOM_TIMEOUT=3600

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================
DEBUG=true
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=true

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# Uncomment and modify for production
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=info
# ENABLE_SWAGGER=false
# ENABLE_GRAPHQL_PLAYGROUND=false
# CORS_ORIGIN=https://yourdomain.com
# API_BASE_URL=https://api.yourdomain.com
# WS_URL=wss://ws.yourdomain.com
