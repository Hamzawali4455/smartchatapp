DEEPSEEK_API_KEY=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
DEEPSEEK_BASE_URL=https://api.deepseek.com
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=1000
DEEPSEEK_TEMPERATURE=0.7

# OpenAI Configuration (Alternative)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000

# Speech Services
SPEECH_TO_TEXT_API_KEY=your_speech_to_text_api_key
TEXT_TO_SPEECH_API_KEY=your_text_to_speech_api_key
SPEECH_LANGUAGE=en-US

# Vapi Voice Agent Configuration
VAPI_API_KEY=your_vapi_api_key_here
VAPI_BASE_URL=https://api.vapi.ai
VAPI_AGENT_ID=your_vapi_agent_id_here
VAPI_WEBHOOK_URL=https://your-webhook-url.com/vapi

# AI Processing
AI_PROCESSING_TIMEOUT=5000
ENABLE_AI_FEATURES=true
ENABLE_VOICE_FEATURES=true

# ===========================================
# PUSH NOTIFICATIONS
# ===========================================
# Firebase Cloud Messaging
FCM_SERVER_KEY=your_fcm_server_key
FCM_PROJECT_ID=your_firebase_project_id

# ===========================================
# EMAIL CONFIGURATION (Optional)
# ===========================================
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# ===========================================
# SOCIAL LOGIN (Optional)
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Facebook OAuth
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# ===========================================
# STREAK CONFIGURATION
# ===========================================
STREAK_TIMEOUT_MINUTES=3
MAX_STREAK_LENGTH=3600
STREAK_REWARD_THRESHOLD=7
ENABLE_STREAK_FEATURES=true

# ===========================================
# CONNECTION SUITE
# ===========================================
ENABLE_CONNECTION_SUITE=true
BREATHING_SESSION_TIMEOUT=300
MUSIC_SESSION_TIMEOUT=1800
SHARED_ROOM_TIMEOUT=3600

# ===========================================
# DEVELOPMENT & DEBUGGING
# ===========================================
DEBUG=true
LOG_LEVEL=debug
ENABLE_SWAGGER=true
