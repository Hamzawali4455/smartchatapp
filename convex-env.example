APP_VERSION=1.0.0
NODE_ENV=development
PORT=3000

# ===========================================
# CONVEX CONFIGURATION
# ===========================================
# Get these from your Convex dashboard
CONVEX_DEPLOYMENT_URL=https://brainy-turtle-357.convex.cloud
CONVEX_DEPLOY_KEY=eyJ2MiI6IjQ5OWJhODM4ZjljMDQxZWQ5M2M4OTYzYWQ1MmFkYzkwIn0=

# ===========================================
